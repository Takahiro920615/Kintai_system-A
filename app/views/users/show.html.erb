<% provide(:title, @user.name) %>

<h1><%= @user.name %></h1>

 <div class = "btn-user-show">
    <%= link_to "⬅️前月へ", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
    <%= link_to "１ヶ月分の勤怠編集へ", attendances_edit_one_month_user_path(@user), class: "btn btn-success"%>
    <%= link_to "➡️次月へ",user_path(date: @first_day.next_month), class: "btn btn-info"%>
  </div>

<div class = "show_body">
  <table class = "table table-bordered table-condensed table-hover" id= "table-attendaces">
    <thead>
      <tr>
        <th rowspan = "3">残業指示</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "8">実績</th>
        <th colspan = "8" >所定外勤務</th>
      </tr>
      <tr>
        <td colspan = "4">出社</td>
        <td colspan = "2">退社</td>
        <td rowspan ="2">在社時間</td>
        <td rowspan = "2">備考</td>
        <td colspan = 2>終了予定時間</td>
        <td rowspan = "2">時間外時間</td>
        <td rowspan = "2">業務処理内容</td>
        <td rowspan = "2">指示者確認印</td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td colspan="2"></td>
        <td>時</td>
        <td>分</td>
      　<td>時</td>
      　<td>分</td>
      </tr>
    </thead>
        <tbody>
          <% @attendances.each do |day| %>
          <tr>
          　<td><%= link_to '残業指示', "#", class: "btn btn-primary"%></td>
            <td><%= l(day.worked_on,format: :short) %></td>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
            <td><%= l(day.started_at.floor_to(15.minutes),format: :minute) if day.started_at.present? %></td>
            <td>
               <% if btn_text = attendance_state(day) %>
            　　<%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
               <% end %>
            </td>
            <td><%=l(day.finished_at,format: :hour) if day.finished_at.present? %></td>
            <td><%=l(day.finished_at.floor_to(15.minutes),format: :minute) if day.finished_at.present? %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= working_times(day.started_at, day.finished_at) %>
              <% end %>
            </td>
            <td><%= day.note %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    
  </div>  
  <%= @worked_sum %>
  
  <tfoot>
    <tr>
      <td rowspan = "2">テスト</td>
      <td colspan = "2"><%= format_basic_info(@user.work_time).to_f* @worked_sum %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
    
    </tr>
  </tfoot>
 </table> 
 
</div>