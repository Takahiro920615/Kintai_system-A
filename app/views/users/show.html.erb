<% provide(:title, @user.name) %>

<h1><%= @user.name %></h1>

<div class = "show_body">
  <table class = "table table-bordered table-condensed table-hover" id= "table-attendaces">
    <thead>
      <tr>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "11">実績</th>
        <th colspan = "3" >所定外勤務</th>
      </tr>
   
      
      <tr>
        <td></td>
        <td></td>
        <td colspan = 6>出社</td>
        <td colspan = 3>退社</td>
        <td>在社時間</td>
        <td>備考</td>
        <td colspan = 2>終了予定時間</td>
        
      </tr>
    
    
      <tr>
        <td><%= @user.department%></td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td>時間外時間</td>
        <td>業務処理内容</td>
        <td>指示者確認印</td>
      </tr>
    </thead>
  </table>
  
  <div class = "btn-user-show">
    <%= link_to "⬅️前月へ", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
    <%= link_to "➡️次月へ",user_path(date: @first_day.next_month), class: "btn btn-info"%>
  </div>
    
  <div>
    <table class = "table table-bordered table-condensed table-hover" id= "table-attendaces">
        <tbody>
          <% @attendances.each do |day| %>
          <tr>
            <td><%= l(day.worked_on,format: :short) %></td>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td>
              <% if btn_text = attendance_state(day) %>
            　　<%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
              <% end %>
            </td>
            <td></td>
            <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
            <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= working_times(day.started_at, day.finished_at) %>
              <% end %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
    
  </div>  
  <%= @worked_sum %>
  
  <tfoot>
    <tr>
      <td rowspan = "2">テスト</td>
      <td colspan = "2"><%= format_basic_info(@user.work_time).to_f* @worked_sum %></td>
      <td colspan = "2"></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
 </table> 
 
</div>